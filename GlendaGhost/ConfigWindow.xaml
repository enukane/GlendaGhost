<Window x:Class="GlendaGhost.ConfigWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ConfigWindow" Height="277" Width="277" Icon="/GlendaGhost;component/logo.ico">
    <Grid Background="WhiteSmoke">
        <Button Height="23" HorizontalAlignment="Left" Margin="24,0,0,16" Name="ok_button" VerticalAlignment="Bottom" Width="75" Click="ok_button_Click">OK</Button>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,32,16" Name="cancel_button" VerticalAlignment="Bottom" Width="75" Click="cancel_button_Click">Cancel</Button>
        <Label Height="28" Name="label1" Margin="12,12,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120">ユーザ名</Label>
        <Label Margin="12,68,0,0" Name="label2" HorizontalAlignment="Left" Width="120" Height="27" VerticalAlignment="Top">パスワード</Label>
        <TextBox Margin="12,37,16,0" Name="username_textBox" Height="25" VerticalAlignment="Top" />
        <PasswordBox Margin="12,92,16,0" Name="passwordBox" Height="25" VerticalAlignment="Top" />
    </Grid>
</Window>
